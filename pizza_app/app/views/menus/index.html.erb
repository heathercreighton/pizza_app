<div class="jumbotron">
<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<table>
  <thead>
    <tr>
      <th>Item type</th>
      <th>Item name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |menu| %>
      <tr>
        <td><%= menu.item_type %></td>
        <td><%= menu.item_name %></td>
        <td><%= menu.description %></td>
        <td><%= menu.price %></td>
       <% if user_signed_in? %> 
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Menu', new_menu_path %>
<% end %>
</div>